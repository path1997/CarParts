<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <ScrollView
        android:id="@+id/sv_add_ann"
        android:layout_width="match_parent"
        android:layout_height="667dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_title_add_ann"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:ems="10"
                android:hint="Title"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_price_add_ann"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:ems="10"
                android:hint="Price"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/et_description_add_ann"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_margin="16dp"
                android:ems="10"
                android:hint="Description"
                android:inputType="textPersonName"
                android:textAlignment="viewStart" />

            <EditText
                android:id="@+id/et_how_month_add_ann"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:ems="10"
                android:hint="How Month"
                android:inputType="numberSigned"
                android:orientation="vertical"
                android:textAlignment="center"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_cost_add_ann"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_add_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="110dp"
                android:background="@drawable/round_button_add_image"
                android:text="UPLOAD IMAGE" />

            <ImageView
                android:id="@+id/im_add"
                android:layout_width="88dp"
                android:layout_height="73dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="32dp" />

            <Button
                android:id="@+id/btn_add_ann"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/round_button_add_ann"
                android:text="ADD"
                android:textSize="25sp" />

        </LinearLayout>


    </ScrollView>

</RelativeLayout>